<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignOut">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="208dp"
        android:layout_height="199dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/saaf" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="397dp"
        android:layout_height="473dp"
        android:background="@drawable/rdis"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.779">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="717dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="Select your preferred branch"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="-160dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="77dp"
            android:layout_height="29dp"
            android:text="Riyadh"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.156"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="194dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="144dp"
            android:layout_height="71dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/rating"
            tools:layout_editor_absoluteY="157dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="232dp"
            android:layout_height="106dp"
            android:text="In Riyadh, hotels offer diverse amenities for all budgets and preferences, catering to both business and leisure travelers with local hospitality."
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="64dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="131dp"
            android:layout_height="207dp"
            app:srcCompat="@drawable/riyadh"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="133dp"
            android:layout_height="316dp"
            app:srcCompat="@drawable/khobar"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="173dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khobar"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="409dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="239dp"
            android:layout_height="115dp"
            android:text="In Khobar, hotels offer amenities for all budgets and preferences, welcoming both business and leisure travelers for a comfortable stay in this vibrant city."
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="269dp" />

        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="144dp"
            android:layout_height="71dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/rating"
            tools:layout_editor_absoluteY="365dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="114dp"
            android:layout_height="37dp"
            android:background="#dbcfa7"
            android:text="Select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="173dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="114dp"
            android:layout_height="37dp"
            android:background="#dbcfa7"
            android:text="Select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="383dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginBottom="2dp"
        android:background="#dbcfa7"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/signout" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/home" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/prof" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="213dp"
        android:layout_margin="10dp"
        android:background="@drawable/popup"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Are you sure you want to sign out?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/skipBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Skip"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/yesBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/got"
                android:padding="10dp"
                android:text="Yes I'm sure"
                android:textSize="16dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

